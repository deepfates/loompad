{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "rootDir": "../",
    "outDir": "../dist",
    "typeRoots": ["../node_modules/@types", "../config/types"],
    "paths": {
      "server/*": ["../server/*"],
      "client/*": ["../client/*"],
      "shared/*": ["../shared/*"],
      "config/*": ["../config/*"],
      "srcl/*": ["../node_modules/srcl/*"],
      "@/*": ["../node_modules/srcl/src/*"],
      "@common/*": ["../node_modules/srcl/common/*"],
      "@components/*": ["../node_modules/srcl/components/*"],
      "@lib/*": ["../node_modules/srcl/lib/*"],
      "@modules/*": ["../node_modules/srcl/modules/*"]
    }
  },
  "include": [
    "../server/**/*",
    "../client/**/*",
    "../shared/**/*",
    "../config/**/*",
    "../*.ts"
  ]
}
